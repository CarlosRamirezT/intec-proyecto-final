@model intec_proyecto_final_t_3.Models.InvoicesLines

@{
    ViewData["Title"] = "Invoice Lines";
}

<h1>Create</h1>

<h4>Invoice Lines</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFromInvoice">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InvoiceId" class="control-label"></label>
                @Html.DropDownList("Invoice", ViewBag.Invoice, String.Empty, new { @class = "form-control" })
                <span asp-validation-for="InvoiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductId" class="control-label"></label>
                @Html.DropDownList("Product", ViewBag.Product, String.Empty, new { @class = "form-control" })
                <span asp-validation-for="ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Invoices" asp-action="Details" asp-route-id="@ViewBag.InvoiceId">Back to Invoice</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
