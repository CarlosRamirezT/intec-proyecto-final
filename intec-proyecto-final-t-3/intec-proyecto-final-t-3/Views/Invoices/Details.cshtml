@model dynamic

@{
    ViewData["Title"] = "Invoices";
}

<h1>Details</h1>

<div>
    <h4>Invoices</h4>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.invoice.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.invoice.Customer
        </dd>
        <dt class="col-sm-2">
            State
        </dt>
        <dd class="col-sm-10">
            @Model.invoice.State
        </dd>
        <dt class="col-sm-2">
            Date Invoiced
        </dt>
        <dd class="col-sm-10">
            @Model.invoice.DateInvoice
        </dd>
        <dt class="col-sm-2">
            Date Due
        </dt>
        <dd class="col-sm-10">
            @Model.invoice.DateDue
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                Product
            </th>
            <th>
                Description
            </th>
            <th>
                Quantity
            </th>
            <th>
                Unit Price
            </th>
            <th>
                Subtotal
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (InvoicesLinesView line in Model.lines)
        {
        <tr>
            <td>
                @line.Product
            </td>
            <td>
                @line.Description
            </td>
            <td>
                @line.Quantity
            </td>
            <td>
                $ @line.UnitPrice
            </td>
            <td>
                $ @line.Subtotal
            </td>
        </tr>}
    </tbody>
</table>
<div style="display: flex;justify-content: right;">
    <table>
        <tbody>
            <tr>
                <th style="padding: 0 15px 0 0">
                    Amount Untaxed
                </th>
                <td />
                <td>
                    $ @Model.invoice.AmountUntaxed
                </td>
            </tr>
            <tr>
                <th>
                    Amount Tax
                </th>
                <td />
                <td>
                    $ @Model.invoice.AmountTax
                </td>
            </tr>
            <tr>
                <th>
                    Amount Total
                </th>
                <td />
                <td>
                    $ @Model.invoice.AmountTotal
                </td>

            </tr>
        </tbody>
    </table>
</div>
<div style="display: flex;justify-content: right;">
    <table>
        <tbody>
            <tr style="padding: 0 15px 0 0">
                <th>
                    Amount Paid
                </th>
                <td />
                <td>
                    $ @Model.invoice.AmountPaid
                </td>

            </tr>
            <tr>
                <th>
                    Amount Due
                </th>
                <td />
                <td>
                    $ @Model.invoice.AmountDue
                </td>

            </tr>
        </tbody>
    </table>
</div>
